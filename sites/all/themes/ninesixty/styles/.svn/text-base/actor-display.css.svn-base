/**
 * ACTOR PAGER STYLING
 * 
 */
.view-cycle-pager li{
	list-style:none !important;
	list-style-type:none;
	/*border:1px solid black;*/
	margin-left:0px !important;
	text-align: left;
	width:100px;
	border-right:0px;
}

.views-cycle-container li{
	list-style:none !important;
	list-style-type:none;
	
	margin-left:0px !important;
	
}
/************************************* VIEWS CYCLE PAGER CSS **************************************/
.view-cycle-pager li a{
	text-decoration :none;
	margin:5px;
	width:100px !important;
	color:#000;
	font: 900 12px "Arial", Helvetica, sans-serif;
	
	}
	

.view-cycle-pager li a.activeSlide{
	color:#000;
}

.view-cycle-pager li a:hover{
	color:#000;
	
}
		
.views-cycle-container{
	float:left;
	padding-left:8px !important;
}

.sideTab{
	width:148px;
	
	/*background: url(../images/side_tab_bg.gif) repeat-y;*/
	padding-top:5px;
	font-family:Arial, Helvetica, sans-serif;
	font-weight:bold;
	margin-left:-6px;
	
	
}

.sideTab-bottom{
	
	height: 200px;
	background:url(../images/bottom_fade.gif) no-repeat right top;
	clear:left;
}
.sideTab-bottom-actor{
	width:159px;
	height: 200px;
	border-right: 1px #bbbbbb solid;
	clear:left;
}

.sideTabHeader{
	height:30px;
	width:100%;	
	text-align:center;
	vertical-align:middle;
	border-bottom:1px solid #bbbbbb !important;
	background:url(../images/fadedline.gif) no-repeat bottom right;
	
}

ul.view-cycle-pager{
	margin:0px;
	padding:0px;	
}

ul.view-cycle-pager li{
	margin:0 0 0 0px;
	padding:8px 0 0 12px;
	height:29px;
	list-style:none;
	width:136px;
	border: 1px #bbbbbb;
	border-style:none solid solid none;
	background-color:#e6e6e6;
}

ul.view-cycle-pager li:hover, ul.view-cycle-pager li.current {
	width:136px;
	color: #000000;
	border-right:none;
	background-color:#fff;
}

ul.view-cycle-pager li.activeSlide{
	width:100%;
	color: #000;
	background-color:#fff;
	border-right:none;
	width:136px;
}


